{%block document%} 
    <div class="register">
        <div class="title">Регистрация</div>
        <div class="register__form form">
            <form action="authorization.php" method="post" onsubmit="return validateRegister();">
                <table><tbody>
                <tr><td>имя</td><td><input type="text" name="name" id="name"></td></tr>
                <tr><td>фамилия</td><td><input type="text" name="surname" id="surname"></td></tr>
                <tr><td>почта</td><td><input type="text" name="email" id="email"></td></tr>                   
                <tr><td>логин</td><td><input type="text" name="login" id="login"> <span style="color:red;">{{mesage_error_login}}</span></td></tr>
                <tr><td>пароль</td><td><input type="password" name="password"  id="password"></td></tr>
                <tr><td>повторите пароль</td><td><input type="password" name="confirm"  id="confirm"></td></tr>
                </tbody></table>
                <input type="submit" value="Зарегистрироваться" id="register-submit">
            </form>
        </div>
    </div>
 {%endblock%}
 {%block script%}
    <script src="./assets/js/validate.js"></script>
 {%endblock%}